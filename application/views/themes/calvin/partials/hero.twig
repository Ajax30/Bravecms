<!-- hero
    ================================================== -->
    <section id="hero" class="s-hero">

        <div class="s-hero__slider">
        {% if featured %}
	        {% for post in featured %}
            <div class="s-hero__slide">
                <div class="s-hero__slide-bg" style="background-image: url('{{base_url}}/assets/img/posts/{{post.post_image}}');"></div>
                <div class="row s-hero__slide-content animate-this">
                    <div class="column">
                        <div class="s-hero__slide-meta">
                            <span class="cat-links">
                                <a href="{{base_url}}categories/posts/{{post.cat_id}}">{{post.post_category}}</a>
                            </span>
                            <span class="byline"> 
                                Posted by 
                                <span class="author">
                                    <a href="{{base_url}}posts/byauthor/{{post.author_id}}">
																			{{post.author_fname}} {{post.author_lname}}
																		</a>
                                </span>
                            </span>
                        </div>
                        <h1 class="s-hero__slide-text">
                            <a href="{{base_url}}{{post.slug}}">{{post.title}}</a>
                        </h1>
                    </div>
                </div>
            </div><!-- end s-hero__slide -->
	    		{% endfor %}
				{% endif %}
        </div><!-- end s-hero__slider -->

        <div class="s-hero__social hide-on-mobile-small">
            <p>Follow</p>
            <span></span>
            <ul class="s-hero__social-icons">
                <li><a href="{{twitter}}" target="_blank"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                <li><a href="{{facebook}}" target="_blank"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                <li><a href="{{instagram}}" target="_blank"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                <li><a href="mailto:{{company_email}}"><i class="fab fa-dribbble" aria-hidden="true"></i></a></li>
            </ul>
        </div> <!-- end s-hero__social -->

			{% if featured|length > 1 %}
        <div class="nav-arrows s-hero__nav-arrows">
            <button class="s-hero__arrow-prev">
                <svg viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg" width="15" height="15"><path d="M1.5 7.5l4-4m-4 4l4 4m-4-4H14" stroke="currentColor"></path></svg>
            </button>
            <button class="s-hero__arrow-next">
               <svg viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg" width="15" height="15"><path d="M13.5 7.5l-4-4m4 4l-4 4m4-4H1" stroke="currentColor"></path></svg>
            </button>
        </div> <!-- end s-hero__arrows -->
			{% endif %}

    </section> <!-- end s-hero -->